<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-extend="ProductCategoriesWidget">
	    <t t-jquery=".breadcrumbs" t-operation="after">
            <span class="breadcrumb filter_spt" title="Open Filter Menu">
                <span class=" breadcrumb-button breadcrumb-filter js-filter-switch">
                    <i class='fa fa-filter'></i>
                </span>
            </span>
            <span class="breadcrumb filter_clear_spt" style="display: none;height: unset;line-height: unset;min-width: unset;">
                <div class='clear_filter' title="Reset Filter" style="top: 10px;">
                    <i class='fa fa-refresh'></i>
                </div>
            </span>
        </t>
    </t>

    <t t-extend="ProductScreenWidget">
        <t t-jquery="div.leftpane" t-operation="before">
            <!--   Off Canvas Nav - BEGIN -->
            <div class="overlay_filter"></div>
            
            <nav class="offCanvas">
                <div class="navProfile">
                    <div class="avatarName">Product filters</div>
                </div>
               
                <ul id="accordion" class="accordion">
                    <!-- product brands -->
                    <li t-if="widget.pos.product_brands.length>0">
                        <div class="link" value="brand">
                            <i class="fa fa-ticket"></i>
                                Brands
                            <i class="fa fa-chevron-down"></i>
                        </div>
                        <ul class="submenu dropdown_variable">
                            <t t-foreach="widget.pos.product_brands" t-as="pro_brand">
                                <li>
                                    <label><t t-esc="pro_brand"/>
                                        <input type="checkbox" class="filter_chk" t-att-name="brand" t-att-value="pro_brand" />
                                        <span></span>
                                    </label>
                                </li>
                            </t>
                        </ul>
                    </li>

                    <!-- product Models -->
                    <li t-if="widget.pos.product_models.length>0">
                        <div class="link" value="model">
                            <i class="fa fa-anchor"></i>
                                Models
                            <i class="fa fa-chevron-down"></i>
                        </div>
                        <ul class="submenu dropdown_variable">
                            <t t-foreach="widget.pos.product_models" t-as="pro_model">
                                <li>
                                    <label><t t-esc="pro_model"/>
                                        <input type="checkbox" class="filter_chk" t-att-name="model" t-att-value="pro_model" />
                                        <span></span>
                                    </label>
                                </li>
                            </t>
                        </ul>
                    </li>

                    <span class="filter_devider"/>

                    <t t-foreach="widget.pos.product_attributes" t-as="pro_attr">
                        <!-- <t t-log="pro_attr['name']"/>
                        <t t-log="pro_attr.name"/> -->
                        <li>
                            <div class="link" t-att-data-id="pro_attr.id" t-att-value="pro_attr.name">
                                <i class="fa fa-cog"></i>
                                    <t t-esc="pro_attr.name"/>
                                <i class="fa fa-chevron-down"></i>
                            </div>
                            <ul class="submenu dropdown_variable">
                                <t t-foreach="widget.pos.product_attribute_values" t-as="pro_attr_val">
                                    <li t-if="pro_attr.id==pro_attr_val.attribute_id[0]">
                                        <label><t t-esc="pro_attr_val.name"/>
                                            <input type="checkbox" class="filter_chk" t-att-name="pro_attr.name" t-att-id="pro_attr_val.id" t-att-value="pro_attr_val.name" />
                                            <div t-if="pro_attr.name=='Color'" class="var_color" t-attf-style="background-color:#{pro_attr_val.html_color or pro_attr_val.name}"></div>
                                            <span></span>
                                        </label>
                                    </li>
                                </t>
                            </ul>
                        </li>
                    </t>

                    

                </ul>
            </nav>
        </t>
    </t>
</templates>
